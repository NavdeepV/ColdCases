<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textCold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:text="@string/cold"
        android:textColor="#B00000"
        android:textSize="80sp"
        android:textStyle="bold"
        android:fontFamily="@font/capture_it" />

    <TextView
        android:id="@+id/textCases"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textCold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="@string/cases"
        android:textColor="#FFFFFF"
        android:textSize="80sp"
        android:textStyle="bold"
        android:fontFamily="@font/capture_it" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/loginSignupContainer"
        android:layout_width="250dp"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="48dp"
        android:text="@string/click_here_to_sign_up_or_login"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:backgroundTint="#B00000"
        app:cardCornerRadius="50dp"
        style="@style/Widget.MaterialComponents.Button" />

</RelativeLayout>
